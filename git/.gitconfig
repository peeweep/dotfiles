[core]
	editor = nvim
	excludesfile = ~/.gitignore
	mergeoptions = --no-edit
[alias]
	commitutc = !git commit -s --date=\"$(date -u +%Y-%m-%dT%H:%M:%S%z)\"
[push]
	followTags = false
	default = current
[pull]
	ff = only
[gitreview]
	remote = origin
[color]
